<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/pageforee_configuration.xsd">
	<body>
		<!--        <move element="page.main.title" destination="content.top" before="-" />-->
		<referenceContainer name="product.info.main">
			<container name="em-review-email" htmlTag="div" htmlClass="em-review-email" before="-" />
			<container name="product_view_block_custom" label="Product View Static Block Custom" htmlTag="div" htmlClass="em-wrapper-ads" after="-" />
		</referenceContainer>
		<move element="product.info.review" destination="em-review-email" before="-" />
		<move element="product.info.mailto" destination="em-review-email" after="product.info.review" />
		<move element="product.info.stock.sku" destination="product.info.main" after="em-review-email" />
		<move element="product.info.sku" destination="product.info.stock.sku" before="product.info.type" />
		<move element="product.info.overview" destination="product.info.main" after="product.info.stock.sku" />
		<move element="product.info.social" destination="product.info.main" before="product.info.type" />
		<referenceBlock name="product.info.addto" remove="true" />
		<referenceBlock name="product.info.overview">
			<arguments>
				<argument name="at_label" translate="true" xsi:type="string">Quick Overview</argument>
			</arguments>
		</referenceBlock>
		<!--referenceContainer name="product.info.social">
			<block class="Magento\Catalog\Block\Product\View" name="product.social.buttons" template="product/view/social_buttons.phtml" after="-" />
		</referenceContainer-->
		<referenceBlock name="product.info.details">
			<container name="product_view_block_custom_tab_1" label="Product View Static Block Custom Tab 1" before="product_view_block_custom_tab_2" />
			<container name="product_view_block_custom_tab_2" label="Product View Static Block Custom Tab 2" after="-" />
		</referenceBlock>
		<referenceContainer name="content">
			<container name="product_info_top" htmlTag="div" htmlClass="product-info-top row" before="-">
				<container name="product_info_top.left" htmlTag="div" htmlClass="product-info-top-left col-sm-18" />
				<container name="product_info_top.right" htmlTag="div" htmlClass="product-info-top-right col-sm-6" label="Product View Top Right">
					<block class="Magento\Framework\View\Element\Template" name="product_info_top.right.inner" template="Magento_Catalog::product/view/top_right_block.phtml" />
				</container>
			</container>
			<container name="product_info_bottom" htmlTag="div" htmlClass="product-info-bottom row" after="product_info_top">
				<container name="product_info_bottom.left" htmlTag="div" htmlClass="product-info-bottom-left col-sm-18" />
				<container name="product_info_bottom.right" htmlTag="div" htmlClass="product-info-bottom-right col-sm-6" label="Product View Bottom Right" />
			</container>
		</referenceContainer>
		<move element="product.info.main" destination="product_info_top.left" />
		<move element="product.info.media" destination="product_info_top.left" />
		<move element="product.info.details" destination="product_info_bottom.left" />
		<referenceBlock name="catalog.product.related" template="Magento_Catalog::product/list/related.phtml" />
		<move element="catalog.product.related" destination="product_info_bottom.right" before="-" />
		<move element="product.info.upsell" destination="product_info_bottom.left" />
	</body>
</page>