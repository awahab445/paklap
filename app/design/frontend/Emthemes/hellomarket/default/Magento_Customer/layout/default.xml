<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
		<referenceBlock name="top.links">
			<referenceBlock name="my-account-link" display="false" />
			<block class="Magento\Customer\Block\Account\AuthorizationLink" name="top-authorization-link" template="account/link/authorization.phtml" before="register-link" />
		</referenceBlock>
		<referenceContainer name="header.area.right">
			<container name="em_header_account" htmlClass="header-account" htmlTag="ul" after="-">
				<block class="Magento\Customer\Block\Account\AuthorizationLink" name="authorization-link" template="account/link/authorization.phtml" before="register-link" />
			</container>
		</referenceContainer>
		
		<block class="Magento\Theme\Block\Html\Header" name="header" as="header">
			<arguments>
				<argument name="show_part" xsi:type="string">welcome</argument>
			</arguments>
		</block>
		<referenceBlock name="authorization-link">
			<block class="Emthemes\Em0156settings\Block\Form\Login" name="link_popup_login" template="Magento_Customer::form/link_popup_login.phtml" />
			<block class="Emthemes\Em0156settings\Block\Form\Login" name="dropdown_login" template="Magento_Customer::form/account_menu.phtml" after="link_popup_login" />
			
		</referenceBlock>
		<referenceBlock name="dropdown_login">
			<block class="Magento\Customer\Block\Account\RegisterLink" name="dropdown-register-link" template="account/link/registration.phtml">
				<arguments>
					<argument name="label" xsi:type="string" translate="true">Register</argument>
					<argument name="title" xsi:type="string" translate="true">Register</argument>
				</arguments>
			</block>
		</referenceBlock>
		<referenceBlock name="link_popup_login">
			<block class="Magento\Customer\Block\Account\RegisterLink" name="popup-register-link" template="account/link/registration.phtml">
				<arguments>
					<argument name="label" xsi:type="string" translate="true">Register</argument>
					<argument name="title" xsi:type="string" translate="true">Register</argument>
				</arguments>
			</block>
		</referenceBlock>
		
		<!--move element="catalog.compare.link" destination="dropdown_login"/>
		<move element="wish-list-link" destination="dropdown_login" after="catalog.compare.link" /-->
		
		<referenceBlock name="dropdown_login">
			<block class="Magento\Framework\View\Element\Template" name="account.compare.link" after="wish-list-link" template="Magento_Catalog::product/compare/link.phtml">
				<arguments>
					<argument name="jsLayout" xsi:type="array">
						<item name="components" xsi:type="array">
							<item name="compareProducts" xsi:type="array">
								<item name="component" xsi:type="string">Magento_Catalog/js/view/compare-products</item>
							</item>
						</item>
					</argument>
				</arguments>
			</block>
			<block class="Magento\Wishlist\Block\Link" name="account.wishlist.link">
                    <arguments>
		            <argument name="label" xsi:type="string" translate="true">Wishlist</argument>				
		            <argument name="title" xsi:type="string" translate="true">Wishlist</argument>				
	            </arguments>
            </block>
		</referenceBlock>
	</body>
</page>