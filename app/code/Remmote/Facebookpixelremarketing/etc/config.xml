<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <remmote_facebookpixelremarketing>
            <general>
                <enabled>0</enabled>
                <use_product_id>0</use_product_id>
            </general>

            <events>
                <view_content>1</view_content>
                <search>0</search>
                <add_to_cart>1</add_to_cart>
                <add_to_wishlist>0</add_to_wishlist>
                <initiate_checkout>0</initiate_checkout>
                <add_payment_info>0</add_payment_info>
                <purchase>1</purchase>
                <lead>0</lead>
                <complete_registration>0</complete_registration>
            </events>

            <product_catalogs>
                <export_all>0</export_all>
                <export_not_visible_individually>0</export_not_visible_individually>
                <include_tax>0</include_tax>
            </product_catalogs>

            <scheduled_uploads>
                <enabled>0</enabled>
                <frequency>1</frequency>
                <time>02,00,00</time>
                <time_lastexport>No last export time to show</time_lastexport>
            </scheduled_uploads>
        </remmote_facebookpixelremarketing>
    </default>
</config>